{
  "name": "My VPN",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Secure VPN via Chrome extension",
  "permissions": ["proxy", "storage", "scripting"],
  "host_permissions": ["http://localhost:5001/*"],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
